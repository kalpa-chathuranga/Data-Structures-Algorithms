package BinaryTreePackage;

public class BinaryTree {

	private Node root;
	
	public BinaryTree() {
		root = null;
	}
	
	public void addNode(int value)
	{
		Node x = new Node(value);
		
		if( root == null)
		{
			root= x;
		}
		
		if(value < root.data)
		{
			if( x.left==null ){	x.data = value;	}
			else{addNode(value);}
		}
		else
		{
			if( x.right==null ){	x.data = value;	}
			else{addNode(value);}
		}
		
		
	}
	
}


