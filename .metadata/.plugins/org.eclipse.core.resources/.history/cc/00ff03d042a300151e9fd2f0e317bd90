
public class Sort {


	/*
	 * Bubble sort implementation
	 * 
	 * Input: unsorted array
	 * Output: sorted array
	 * 
	 * 
	 * */
		
	 public int[] bubbleSort(int[] array)
		{
			
			for (int out = array.length - 1 ; out > 1; out --) {
				
				for (int i = 0; i < out; i++) {
					
					if (array[i] > array[i+1])
					{
						//swap
						int temp  = array[i];
						array[i] = array[i+1];
						array[i+1] = temp;
					}
				}
			}
			
			return array;
			
		}

	
}
